<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FeedsActivity">

    <RelativeLayout
        android:backgroundTint="@color/white"
        android:id="@+id/action_bar_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingTop="@dimen/_10sdp"
            android:src="@drawable/ic_camera"
            android:id="@+id/insta_logo"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toRightOf="@id/insta_logo"
            android:text="Instagram"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/billabong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/ic_send"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_feed"
        android:layout_below="@id/action_bar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false" />


    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">

        <ImageView
            android:src="@drawable/ic_home2"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>

        <ImageView
            android:src="@drawable/ic_search2"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_add"
            android:src="@drawable/ic_share"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/ic_like2"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/ic_profile2"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>



</RelativeLayout>